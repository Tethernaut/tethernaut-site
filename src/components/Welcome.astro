---
import tethernautLogo from "../assets/tethernaut-games-dark.svg";
import spaceman from "../assets/spaceman.svg";
---

<div id="container">
  <main>
    <section id="hero">
      <img
        id="spaceman"
        src={spaceman.src}
        width="100"
        alt="Tethernaut Games Homepage"
      />
      <h1>TETHERNAUT GAMES</h1>
      <h2>COMING SOON</h2>
    </section>
  </main>
</div>

<style>
  #container {
    height: 100%;
    background-color: #000924;
  }

  @keyframes spaceFloat {
    0% {
      transform: translateY(0) rotate(15deg);
    }
    50% {
      transform: translateY(-20px) rotate(20deg);
    }
    100% {
      transform: translateY(0) rotate(15deg);
    }
  }

  #spaceman {
    animation: spaceFloat 6s ease-in-out infinite;
  }

  main {
    height: 100%;
    display: flex;
    justify-content: center;
  }

  #hero {
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    padding: 16px;
  }

  h1 {
    font-weight: bold;
    font-size: 64px;
    margin-top: 0.25em;
    font-weight: 200;
    color: #73f0c6;
  }

  h2 {
    font-size: 24px;
    margin-top: 0.25em;
    color: #73f0c6;
  }
</style>
